{
  "name": "persona-arcana-backend",
  "version": "1.0.0",
  "description": "Backend API for Persona Arcana mobile app",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:upload": "jest tests/upload.test.js --verbose",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "setup:digitalocean": "node scripts/setup-digitalocean.js",
    "setup:auth": "node scripts/setup-auth.js",
    "test:auth": "jest tests/auth.test.js --verbose",
    "test:sentry": "node scripts/test-sentry.js",
    "validate:env": "node scripts/validate-environment.js",
    "deploy:do": "echo 'Deploy via DigitalOcean App Platform dashboard or doctl'"
  },
  "dependencies": {
    "@sentry/node": "7.81.1",
    "aws-sdk": "2.1498.0",
    "bcrypt": "5.1.1",
    "compression": "1.7.4",
    "connect-mongo": "5.1.0",
    "cors": "2.8.5",
    "dotenv": "16.6.1",
    "express": "4.19.2",
    "express-rate-limit": "7.1.5",
    "express-session": "1.17.3",
    "express-validator": "7.2.1",
    "helmet": "7.1.0",
    "joi": "17.11.0",
    "jsonwebtoken": "9.0.2",
    "mongodb": "6.20.0",
    "mongoose": "8.0.3",
    "morgan": "1.10.0",
    "multer": "1.4.5-lts.1",
    "passport": "0.7.0",
    "passport-google-oauth20": "2.0.0",
    "passport-jwt": "4.0.1",
    "sharp": "0.32.6"
  },
  "devDependencies": {
    "@types/jest": "29.5.8",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-node": "11.1.0",
    "form-data": "^4.0.4",
    "jest": "29.7.0",
    "node-fetch": "^3.3.2",
    "nodemon": "3.0.2",
    "prettier": "3.1.1",
    "supertest": "6.3.3"
  },
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.0.0"
  }
}
